<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th>Leave from</th>
      <th>Leave to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% scoots.each do |scoot| %>
      <tr>
        <td><%= link_to scoot.subject, scoot %></td>
        <td><%= scoot.body %></td>
        <td><%= scoot.leave_from %></td>
        <td><%= scoot.leave_to %></td>
        <% if can? :manage, current_user %>
          <td><%= link_to 'Show', scoot %></td>
          <td><%= link_to 'Edit', edit_scoot_path(scoot) %></td>
          <td><%= link_to 'Destroy', scoot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>