<%= form_for(@scoot) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.try(:id) if current_user %>
  <% if @scoot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scoot.errors.count, "error") %> prohibited this scoot from being saved:</h2>

      <ul>
      <% @scoot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :subject %><br>
    <%= f.text_field :subject %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div style="float: left;padding-right: 10px;">
    <%= f.label :leave_from %><br>
    <%= f.text_field :leave_from, class: 'date-picker' %>
  </div>
  <div class="field">
    <%= f.label :leave_to %><br>
    <%= f.text_field :leave_to, class: 'date-picker' %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
